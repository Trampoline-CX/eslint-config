{
  "name": "@trampoline/eslint-config-packages",
  "version": "0.0.1",
  "description": "Shared ESLint Configs for Trampoline Projects",
  "repository": "https://github.com/Trampoline-CX/eslint-config",
  "author": "Trampoline",
  "license": "MIT",
  "private": true,
  "scripts": {
    "release": "yarn workspaces foreach --no-private npm publish --access public --tolerate-republish",
    "postinstall": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-conventional": "17.0.0",
    "husky": "8.0.1",
    "lint-staged": "12.4.3",
    "prettier": "2.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
