{
  "name": "@trampoline/eslint-config-packages",
  "version": "0.0.1",
  "description": "Shared ESLint Configs for Trampoline Projects",
  "repository": "https://github.com/Trampoline-CX/eslint-config",
  "author": "Trampoline",
  "license": "MIT",
  "private": true,
  "scripts": {
    "update-versions": "yarn workspaces foreach --no-private version",
    "release": "yarn workspaces foreach --no-private npm publish --access public"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "husky": "5.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit"
    }
  },
  "packageManager": "yarn@3.1.1"
}
